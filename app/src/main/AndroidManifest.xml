<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.allana.food_recipe_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Foodrecipeapp">
        <activity
            android:name=".ui.splashscreen.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.intro.IntroActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Intro" />
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Home" />
        <activity
            android:name=".ui.editdelete.EditDeleteRecipeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Home" />
        <activity
            android:name=".ui.add.AddRecipeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Home"/>
    </application>

</manifest>