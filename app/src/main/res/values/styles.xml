<resources>

    <style name="EditTextStyleSingleLine" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:inputType">text</item>
        <item name="textAllCaps">@dimen/_14ssp</item>
        <item name="backgroundTint">@color/fillColor</item>
    </style>

    <style name="EditTextStyleMultiLine" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="backgroundTint">@color/fillColor</item>
    </style>

    <style name="ButtonStyle" parent="ThemeOverlay.Material3.Button">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/black_font</item>
        <item name="paddingStart">@dimen/_16sdp</item>
        <item name="paddingEnd">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
    </style>

